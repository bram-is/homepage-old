<section id="hero" class="masthead  text--center  js--page-section">
    <div class="hero">
        <ul class="hero__panes">
            <li class="hero__pane  color--white">
                <div class="background  {{defbackground}}"></div>
                <div class="hero__center  is-animated">
                    <h1 class="giga">{{herotitle}}</h1>
                    <p class="caps">I'm a UX-developer, Front-end architect, writer and I create awesome stuff for the web.</p>
                    {{#if herohasbuttons }}
                    <a href="#about" class="button  button--white  button--full--palm-port">About</a>
                    <a href="#blog" class="button  button--white  button--full--palm-port">Blog</a>
                    <a href="#work" class="button  button--large  button--brand  button--full--palm-port">I am available</a>
                    <a href="#portfolio" class="button  button--white  button--full--palm-port">Portfolio</a>
                    {{/if}}
                </div><!-- .hero__center -->
            </li><!-- .hero__pane -->
        </ul><!-- .hero__panes -->
    </div><!-- .hero -->
</section><!-- .masthead -->