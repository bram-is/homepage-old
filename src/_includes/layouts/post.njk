{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
<p>
  {% if date %}
    <time datetime="{{ date | w3DateFilter }}">{{ date | dateFilter }}</time>
  {% endif %}
  <span>â€” {{ helpers.getReadingTime(content) }} minute read</span>
</p>
{% endset %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <div class="[ o-retain o-retain--wall ]">
      <article>
        {% include "partials/components/intro.njk" %}
        <div>
          {{ content | safe }}
        </div>
        {% if site.enableThirdPartyComments %}
          <hr />
          <aside>
            {% include "partials/global/third-party-comments.njk" %}
          </aside>
        {% endif %}
        {% if tags %}
          <footer>
            <h2>Filed under</h2>
            <ul>
              {% for item in tags %}
                <li>
                  <a href="/tags/{{ item }}">{{ item }}</a>
                </li>
              {% endfor %}
            </ul>
          </footer>
        {% endif %}
      </article>
    </div>
  </main>
{% endblock %}

{{ content | safe }}
