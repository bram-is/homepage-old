{% set introHeadingLevelInternal = introHeadingLevel|default("1", true) %}

<header class="[ c-intro ]  [ o-grid  o-grid--inner ]  [ o-layer  o-layer--bg ]  [ t-slate-bg ]">
  <h{{ introHeadingLevelInternal }} class="[ c-intro__heading ]  [ c-heading  c-heading--highlight  c-heading--quote ]">{{ introHeading }}</h{{ introHeadingLevelInternal }}>
  {% if introSummary %}
    <div class="u-module  u-margin-block-end-base">{{ introSummary | safe }}</div>
  {% endif %}
</header>
