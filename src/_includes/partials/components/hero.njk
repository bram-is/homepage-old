<header class="c-hero  |  o-layout  o-layout--align-block-center  o-layout--gap-base  |  o-layer">
  <div class="o-layout__fit@palm  |  u-margin-block-end--base  u-margin-block-end--none@palm">
    <div class="c-hero__wrap-image">
      <picture class="o-aspect-ratio">
        <source srcset="/images/avatar.webp" type="image/webp">
        <source srcset="/images/avatar.jpg" type="image/jpeg">
        <img class="c-hero__image  c-avatar  o-aspect-ratio__item" src="/images/avatar.jpg" alt="Bram Smulders eating a steak" loading="lazy" width="320" height="320">
      </picture>
    </div>
  </div>
  <div class="o-layout__fill@palm  |  o-flow  o-flow--tiny">
    <h1 class="c-hero__title"><span class="c-hero__hi  |  u-delta">Hello,</span>I'm <span class="t-highlight">Bram Smulders</span></h1>
    <p>{{ heroPayoff | safe }}</p>
  </div>
</header>
