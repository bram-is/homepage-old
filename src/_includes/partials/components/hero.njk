<header class="[ c-hero ]  [ o-layout  o-layout--align-block-center  o-layout--gap-base ]  [ o-layer ]">
  <div class="[ o-layout__cell  o-layout__cell--fit@from-palm ]  [ u-margin-block-end-base ]">
    <div class="[ c-hero__wrap-image ]">
      <picture class="[ o-aspect-ratio ]  [ u-margin-block-end-none ]">
        <source srcset="/images/avatar.webp" type="image/webp">
        <source srcset="/images/avatar.jpg" type="image/jpeg">
        <img class="[ c-hero__image ]  [ o-aspect-ratio__item ]" src="/images/avatar.jpg" alt="Bram Smulders eating a steak" loading="lazy" width="320" height="320">
      </picture>
    </div>
  </div>
  <div class="[ o-layout__cell  o-layout__cell--fill@from-palm ]  [ u-module ]  [ u-margin-block-end-base ]">
    <h1 class="c-hero__title  u-margin-block-end-none"><span class="[ c-hero__hi ]  [ u-delta ]">Hello,</span>I'm <span class="t-highlight">Bram Smulders</span></h1>
    <p>{{ heroPayoff | safe }}</p>
  </div>
</header>
