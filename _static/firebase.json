{
    "hosting": {
        "public": "_build",
        "headers": [
            {
                "source" : "*",
                "headers" : [
                    {
                        "key" : "Cache-Control",
                        "value" : "max-age=0"
                    }
                ]
            }, {
                "source" : "**/*.@(css|js|jsx|woff|woff2)",
                "headers" : [
                    {
                        "key" : "Cache-Control",
                        "value" : "max-age=31556926"
                    }
                ]
            }, {
                "source" : "**/*.@(jpg|jpeg|gif|svg|bmp|png|webp|mp4|ogg|webm)",
                "headers" : [
                    {
                        "key" : "Cache-Control",
                        "value" : "max-age=2629743"
                    }
                ]
            }
        ]
    }
}
